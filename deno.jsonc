{
	"tasks": {
		"dev": "deno task build && deno run --watch --allow-read --allow-net deno/server.ts",
		"build": "mkdir -p deno/static && deno task build:assets & deno task build:styles",
		"build:assets": "cp -r deno/assets/favicons/ deno/static & cp -r deno/assets/fonts/ deno/static & cp -r deno/assets/modules/ deno/static & deno task build:favicons",
		"build:favicons": "echo needs libvps â€“ should be run locally",
		"build:favicons:local": "deno run --allow-read --allow-write=cmps/build,deno/assets/favicons --allow-run deno/generate_favicons.ts",
		"build:styles": "deno run --allow-read=. --allow-write --allow-net deno/styles/styles.css.ts",
		"serve": "build && deno run --allow-read=deno --allow-net deno/server.ts"
	},
	"compilerOptions": {
		"lib": ["deno.ns", "dom", "dom.asynciterable"],
		"checkJs": true,
		"useUnknownInCatchVariables": true,
		"noUncheckedIndexedAccess": true,
		"jsx": "react-jsx",
		"jsxImportSource": "https://esm.sh/preact@10.12.1"
	},
	"importMap": "import-map.json",
	"fmt": {
		"files": {
			"include": ["deno"]
		},
		"options": {
			"lineWidth": 120,
			"indentWidth": 4,
			"useTabs": true
		}
	},
	"lint": {
		"files": {
			"include": ["deno"]
		}
	}
}
