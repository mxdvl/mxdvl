{
	"extends": ["config:base"],
	"labels": ["dependencies"],
	"schedule": ["after 10am and before 6pm every weekday"],
	"prConcurrentLimit": 5,
	"packageRules": [
        {
            "rangeStrategy": "pin"
        },
		{
			"matchUpdateTypes": ["minor", "patch"],
			"matchCurrentVersion": "!/^0/",
			"automerge": true,
			"automergeType": "pr",
			"platformAutomerge": true
		},
		{
			"groupName": "Svelte",
			"matchPackagePrefixes": ["@sveltejs/"]
		}
	]
}
