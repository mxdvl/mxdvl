{
	"extends": ["config:base"],
	"labels": ["dependencies"],
	"schedule": ["after 10am and before 6pm every weekday"],
	"packageRules": [
		{
			"matchUpdateTypes": ["minor", "patch"],
			"matchCurrentVersion": "!/^0/",
			"automerge": true,
			"automergeType": "branch"
		},
		{
			"groupName": "Svelte",
			"matchPackagePrefixes": ["@sveltejs/"]
		}
	]
}
